    Title = "Load Rewind Event Script",
    Description = "Opens my Rewind Event Script",
    Callback = function()
        loadstring(game:HttpGet("https://raw.githubusercontent.com/bigbeanscripts/Mutate-/refs/heads/main/Cosmic"))()
    end
})

